<div class="jumbotron text-center">
<h1>Blogue de chats</h1>
<%= button_to "Ajouter un Article " ,new_article_path, class: 'btn btn-primary' , :method => "get"%>
</div>

<ul class="list-group">

  <% @articles.each do |article| %>
    <% unless article.archived? %>
      <li class="list-group-item">
       <%= link_to article.title, article %>
       
       <%= image_tag(article.picture.image, class:"rounded float-right", :style => "width:100px;")%>
    <% end %>
          </li>
    <br>
  <% end %>
</ul>



